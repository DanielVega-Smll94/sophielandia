---
const { title, description, href, disabled = false, icon } = Astro.props;
---

<div
  class={`
    group relative rounded-3xl p-8 bg-white/80 backdrop-blur
    transition-all duration-300
    hover:shadow-2xl hover:-translate-y-2
    ${disabled ? "opacity-50" : ""}
  `}
>
  <div class="text-4xl mb-5">{icon}</div>

  <h3 class="text-2xl font-serif text-gray-800 mb-3">
    {title}
  </h3>

  <p class="text-gray-500 mb-6">
    {description}
  </p>

  {!disabled && (
    <a
      href={href}
      class="inline-flex items-center text-sm text-[--color-primary] font-medium group-hover:underline"
    >
      Descubrir
      <span class="ml-1 transition-transform group-hover:translate-x-1">→</span>
    </a>
  )}
</div>
