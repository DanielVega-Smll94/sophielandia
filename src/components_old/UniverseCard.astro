---
const { title, description, icon, href, badge, featured = false, disabled = false } = Astro.props;
---

<article
  class={`
    group relative rounded-[2.25rem] p-8 md:p-9 transition-all duration-300
    ${featured ? "glass shadow-md hover:shadow-xl border border-black/5" : "glass border border-black/5 hover:shadow-lg"}
    ${disabled ? "opacity-55" : "hover:-translate-y-1"}
  `}
>
  <!-- Glow -->
  <div class={`absolute inset-0 rounded-[2.25rem] opacity-0 group-hover:opacity-100 transition-opacity
    ${featured ? "bg-[--color-primary]/10" : "bg-[--color-lavender]/10"}
  `}></div>

  <div class="relative">
    {badge && (
      <div class="inline-flex items-center px-3 py-1 rounded-full text-xs glass border border-black/5 text-gray-600">
        {badge}
      </div>
    )}

    <div class={`mt-5 text-5xl transition-transform duration-300 ${disabled ? "" : "group-hover:scale-110"}`}>
      {icon}
    </div>

    <h3 class="mt-6 text-2xl md:text-3xl font-serif text-gray-800">
      {title}
    </h3>

    <p class="mt-3 text-gray-500 leading-relaxed">
      {description}
    </p>

    {!disabled && href && (
      <a
        href={href}
        class="mt-7 inline-flex items-center gap-2 text-sm font-medium text-gray-800"
      >
        <span class="text-[--color-primary]">Descubrir</span>
        <span class="transition-transform group-hover:translate-x-1">→</span>
      </a>
    )}

    {disabled && (
      <p class="mt-7 text-sm text-gray-400">
        Próximamente ✨
      </p>
    )}
  </div>
</article>
