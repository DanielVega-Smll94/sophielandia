---
const {
  title,
  description,
  image,
  badge,
  href,
  disabled = false,
} = Astro.props;
---

<div
  class="relative overflow-hidden
    rounded-[3.5rem]
    bg-white
    shadow-[0_30px_60px_rgba(0,0,0,0.08)]
    transition-all
    hover:-translate-y-3
    hover:shadow-[0_40px_80px_rgba(0,0,0,0.12)]"
>
  <!-- Imagen -->
  <div class="relative h-56 w-full">
    <img
      src={image}
      alt={title}
      class="absolute inset-0 w-full h-full object-cover"
    />

    <!-- Overlay suave -->
    <div class="absolute inset-0 bg-white/60 backdrop-blur-[0px]"></div>

    {
      badge && (
        <span
          class="absolute top-6 left-6
               bg-[#E8A6B8] text-white
               text-xs px-4 py-1 rounded-full"
        >
          {badge}
        </span>
      )
    }
  </div>

  <!-- Contenido -->
  <div class="relative p-12">
    <h3 class="text-3xl font-serif mb-4">
      {title}
    </h3>

    <p class="text-muted leading-relaxed mb-8">
      {description}
    </p>

    {
      !disabled && href && (
        <a
          href={href}
          class="text-primary font-medium text-lg inline-flex items-center gap-2"
        >
          Ver colección
          <span class="transition-transform group-hover:translate-x-1">→</span>
        </a>
      )
    }

    {disabled && <p class="italic text-muted text-sm">Próximamente ✨</p>}
  </div>
</div>
