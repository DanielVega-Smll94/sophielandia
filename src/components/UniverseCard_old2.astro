---
const { title, description, icon, badge, href, disabled = false } = Astro.props;
---

<div
  class="relative rounded-[3.5rem] p-14
         bg-white
         shadow-[0_30px_60px_rgba(0,0,0,0.08)]
         hover:shadow-[0_40px_80px_rgba(0,0,0,0.12)]
         transition-all hover:-translate-y-3"
>
  {badge && (
    <span class="absolute -top-4 right-10 bg-primary text-white text-xs px-4 py-1 rounded-full">
      {badge}
    </span>
  )}

  <img src={icon} class="w-16 mb-10" />

  <h3 class="text-3xl font-serif mb-4">
    {title}
  </h3>

  <p class="text-muted leading-relaxed mb-10">
    {description}
  </p>

  {!disabled && href && (
    <a href={href} class="text-primary font-medium text-lg">
      Ver colección →
    </a>
  )}

  {disabled && (
    <p class="italic text-muted text-sm">
      Próximamente ✨
    </p>
  )}
</div>
